<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weatherCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageviewCard1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rothkogreen"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Friday"
            android:id="@+id/textViewDay"
            android:textColor="#f9f1c8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewWeatherIcon"
            android:background="@drawable/weather"
            android:layout_below="@+id/textViewDay"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="High temp: 63"
            android:id="@+id/textViewHigh"
            android:textColor="#f59a99"
            android:layout_alignBottom="@+id/imageViewWeatherIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Low: 41"
            android:id="@+id/textViewLow"
            android:textColor="#85a1f7"
            android:layout_alignTop="@+id/textViewHigh"
            android:layout_toRightOf="@+id/textViewDay"
            android:layout_toEndOf="@+id/textViewDay"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>