<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/facebookItemContainer"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/facebookItemThumbnail"
        android:background="#33000000"
        android:src="@drawable/ic_face_white_36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:id="@+id/facebookItemName"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/facebookItemThumbnail"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/facebookItemStatus"
        android:textColor="@android:color/white"
        android:layout_below="@id/facebookItemName"
        android:layout_toRightOf="@id/facebookItemThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>